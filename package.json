{
  "name": "focus",
  "version": "1.0.0",
  "description": "Productivity Tracker",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "webpack --config webpack.config.js --watch & electron .",
    "dev:mock": "webpack --config webpack.config.js --watch & electron . --mock-data",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "npm test && webpack --config webpack.config.js",
    "pack": "npm test && electron-builder --dir",
    "dist": "npm test && electron-builder"
  },
  "build": {
    "appId": "com.focus.productivity",
    "productName": "Focus",
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "active-win": "^8.1.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "i18next": "^24.2.3",
    "i18next-scanner": "^4.6.0",
    "openai": "^4.91.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron-reload": "^2.0.0-alpha.1",
    "jest": "^29.7.0",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
