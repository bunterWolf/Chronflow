{
  "name": "focus",
  "version": "1.0.0",
  "description": "Productivity Tracker",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "webpack --config webpack.config.js --watch & electron .",
    "dev:mock": "webpack --config webpack.config.js --watch & electron . --mock-data",
    "build": "webpack --config webpack.config.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.focus.productivity",
    "productName": "Focus",
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "active-win": "^8.1.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron-reload": "^2.0.0-alpha.1",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
} 